{% macro profile(payload, user, invitations, attempts) %}
<div class="row justify-content-around">
    <div class="card col-sm-3 cardinfo">
        <div class="cardimg">
            <img class="card-img-top" src="/img/4.png" alt="avatar">
        </div>
        <div class="card-body">
            <h5 class="card-title">{{ user.uname }}
                {% if user.rol === 'Admin' %}
                <span class="badge bg-danger">Admin</span>
                {% endif %}
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">{{ user.createdAt.toDateString().split(' ').slice(1).join(' ') }}</h6>
            <ul class="list-group">
                {% if payload.rol === 'Admin' or user._id == payload.id %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        IP
                        <span class="badge bg-secondary">{{ user.ip }}</span>
                    </li>
                {% endif %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Ratio
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Uploaded
                    <span class="badge bg-secondary">&#x2197; 800 MB</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Downloaded
                    <span class="badge bg-secondary">&#x2198; 3 GB</span>
                </li>
            </ul>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card cardinvinfo">
            <div class="card-header">
                <span class="badge rounded-pill bg-primary">{{ invitations.length }}</span>
                Invitations
                <button type="button" class="btn btn-primary btn-sm"  data-bs-toggle="modal" data-bs-target="#invite" style="float: right;">
                    Send Invitation
                </button>
            </div>
            {% if invitations.lenght > 0 %}
            <div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope='row'>1</th>
                            <td>lorem@ipsum</td>
                            <td>01/01/2021</td>
                            <td class='table-success'>Accepted</td>
                        </tr>
                        <tr>
                            <th scope='row'>1</th>
                            <td>lorem@ipsum</td>
                            <td>01/01/2021</td>
                            <td class='table-warning'>Pending</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>
        <div class="card cardloginfo">
            <div class="card-header">
                <span class="badge rounded-pill bg-warning text-dark">{{ attempts.length }}</span>
                Login Attempts
            </div>
            {% if attempts.length > 0 %}
            <div>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>#</th>
                        <th>IP</th>
                        <th>Date</th>
                        <th>Access</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ip, createdAt, success in attempts %}
                        <tr>
                            <th scope='row'>{{ loop.index }}</th>
                            <td>{{ ip }}</td>
                            <td>{{ createdAt.toLocaleString() }}</td>
                            {% if success %}
                                <td class='table-success'>Permitted</td>
                            {% else %}
                                <td class='table-danger'>Denied</td>
                            {% endif %}

                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            {% endif %}
        </div>
    </div>
</div>
<div class="modal fade" id="invite" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-labelledby="inviteTitle" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="inviteTitle">Send invitation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="recipient-name" class="control-label">To:</label>
                    <input type="text" class="form-control" id="dest-email" placeholder="Email">
                </div>
                <div class="form-group">
                    <label for="message-text" class="control-label">Message:</label>
                    <textarea rows="5" class="form-control" id="message-text" placeholder="Optional"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Send</button>
            </div>
        </div>
    </div>
</div>
{% endmacro %}
