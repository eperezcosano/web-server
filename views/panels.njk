{% macro stats(stats) %}
    <div class="card">
        <div class="card-header">Tracker stats</div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Users
                    <span class="badge bg-secondary">{{ stats.totalUsers }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Torrents
                    <span class="badge bg-secondary">{{ stats.totalTorrents }}</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Torrents Active
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Peers
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Seeding
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Leeching
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Ratio
                    <span class="badge bg-secondary">0.9</span>
                </li>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    Traffic
                    <span class="badge bg-secondary">0.9</span>
                </li>
            </ul>
        </div>
    </div>
{% endmacro %}
{% macro torrents(torrents) %}
<div class="card">
    <div class="card-header">Torrents</div>
    <div class="card-body">
        <div class="row">
            {% for torrent in torrents %}
                <div class="col">
                {{ torrent.name }}
                {{ torrent.description }}
                {{ torrent.infoHash }}
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endmacro %}
