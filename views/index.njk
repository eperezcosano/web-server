{% import 'forms.njk' as forms %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Lufo</title>
    <link rel="shortcut icon" href="/favicon.ico">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Quicksand">
    <link rel="stylesheet" href="/css/index.css">
    <script src="https://hcaptcha.com/1/api.js" async defer></script>
</head>
<body>
<div class="warper">
    <div class="login-form">
        <h1 class="login-title">Lufo</h1>
        {# Status alert #}
        {{ forms.alert(alert) }}
        {% if not register and not login %}
            {# Identification #}
            {{ forms.identify(errors) }}
        {% elseif register %}
            {# Register #}
            {{ forms.register(register.email, errors) }}
        {% elseif login %}
            {# Login #}
            {{ forms.login(login.email, login.hcaptcha, login.activation, errors) }}
        {% endif %}
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script type="text/javascript" src="/js/logsys.js"></script>
</body>
</html>
